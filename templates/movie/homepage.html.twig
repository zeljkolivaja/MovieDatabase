{% extends "base.html.twig" %}

{% block title %}
MovieDB homepage
{% endblock %}

{% block body %}

<div style="padding-top: 2%;">

	<h3>Newest movies</h3>
	<h5>Check out the newest releases<h5>
</div>


<div class="card-group">
	<div class="row ">
		{% for movie in pagination %}
		<div class="col-sm-12 col-md-6 col-lg-3">
			<div class="card">
				<a href="{{path('app_movie_show',{slug: movie.slug} )}}"><img
						src="{{asset('images/'~ movie.poster ~'')}}" class="card-img-top" alt="..."></a>

				<div class="card-body">
					<h5 class="card-title">{{movie.title}}</h5>
					<p class="card-text">{{movie.storyline|u.truncate(90,'...',false)}}</p>
					<p class="card-text">
						<small class="text-muted">Categories :
							{% for category in movie.categories %}
							<span class="badge rounded-pill bg-light text-dark">{{category.name}}</span>
							{% endfor %}
						</small>
						<br />

						{% if movie.releaseYear %}
						<small class="text-muted">Release year :
							{{movie.releaseYear|date('Y')}}</small>
						{% else %}
						<small class="text-muted">Release year : To be announced
						</small>
						{% endif %}
					</p>

					{% include 'movie/includes/adminEditDelLinks.html.twig' %}
				</div>
			</div>
		</div>
		{% endfor %}

	</div>
</div>

<div class="pagination-custom">
	{{pagerfanta(pagination)}}
</div>


</div>{% endblock %}