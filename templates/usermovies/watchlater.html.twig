{% extends "base.html.twig" %}

{% block title %}Watch Later List
{% endblock %}

{% block body %}




{% if watchLaterList is not empty %}

<h2>
    Your Watch Later List
</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">
                #
            </th>
            <th scope="col">
                Movie Name
            </th>
            <th scope="col">
                User rating
            </th>
        </tr>
    </thead>
    <tbody>
        {% set counter = 0 %}
        {% for item in watchLaterList %}
        {% set counter = counter + 1 %}
        <tr>
            <td>
                {{ counter }}
            </td>
            <td>
                <a href="{{ path('app_movie_show',{slug: item.movie.slug} ) }}">
                    {{ item.movie.title }}
                </a>
            </td>
            <td>
                {% if item.movie.rating is not null %}
                {{ (item.movie.rating / item.movie.totalVotes)| number_format(2) }}
                {% else %}
                No rating yet
                {% endif %}
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
<p>
<h3>You have no movies added to your watch later list, <a href="{{path('app_movie_explore')}}">check out</a> some of the
    popular titles.</h3>
</p>
{% endif %}


{% endblock %}